{
  "name": "360-business-platform",
  "version": 2,
  "buildCommand": "cd frontend && echo 'ðŸš€ Starting Vercel build with quality gates...' && npm run vercel:build && echo 'âœ… Build completed successfully!'",
  "installCommand": "cd frontend && npm ci",
  "outputDirectory": "frontend/build",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "frontend/static/$1"
    },
    {
      "src": "/content/(.*)",
      "dest": "frontend/content/$1"
    },
    {
      "src": "/(favicon\\.ico|logo192\\.png|logo512\\.png|manifest\\.json|robots\\.txt|sitemap\\.xml)",
      "dest": "frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ]
}