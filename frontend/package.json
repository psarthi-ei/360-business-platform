{
  "name": "frontend",
  "version": "0.1.2",
  "homepage": "https://elevateidea.com",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-helmet-async": "^1.0.1",
    "@types/react-router-dom": "^5.3.3",
    "@vercel/analytics": "^1.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^7.9.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:verbose": "react-scripts test --verbose --coverage --watchAll=false --passWithNoTests",
    "test:quiet": "react-scripts test --coverage --watchAll=false --ci --silent",
    "build:fast": "react-scripts build",
    "build:production": "CI=true npm run build",
    "deploy": "npm run validate && npm run build",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:quiet": "eslint src --ext .ts,.tsx,.js,.jsx --quiet",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "validate": "npm run lint && npm run test:ci && npm run build",
    "validate:strict": "CI=true npm run lint && npm run test:ci && CI=true npm run build", 
    "pre-commit": "npm run validate",
    "prebuild": "npm run lint",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "error",
      "no-debugger": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error"
    },
    "overrides": [
      {
        "files": ["**/__tests__/**/*", "**/*.{test,spec}.*"],
        "rules": {
          "no-console": "off",
          "testing-library/no-node-access": "off",
          "testing-library/no-container": "off",
          "testing-library/prefer-screen-queries": "off",
          "jest/no-conditional-expect": "off",
          "no-restricted-syntax": "off"
        }
      },
      {
        "files": ["src/components/FloatingVoiceAssistant.tsx"],
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@vercel/analytics/react$": "<rootDir>/src/__mocks__/@vercel/analytics.js",
      "^react-router-dom$": "<rootDir>/src/__mocks__/react-router-dom.js"
    }
  },
  "browserslist": {
    "production": [
      "chrome >= 60",
      "and_chr >= 60",
      "samsung >= 6",
      "android >= 60",
      "> 0.5% in IN",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 1 safari version"
    ]
  }
}
